extends ../templates/auth-template.pug

block content
    form(action="/login" method="POST")
        .input-field
            i.material-icons.prefix email
            label(
                for="email_adress"
            ) Email
            input.validate(
                type="email"
                name="email_adress"
                id="email_adress"
            )
            span.helper-text(data-error="wrong" data-success="right")
        .input-field
            i.material-icons.prefix vpn_key
            label(
                for="password"
            ) Password
            input.validate(
                type="password"
                name="password"
                id="password"
            )
            span.helper-text(data-error="wrong" data-success="right")
        button.btn.waves-effect.waves-light(
            type="submit"
        )
            i.material-icons.right send
            | Log in
        .row
            p.col
                | You don't have any account? 
                a(href="/register") Sign in
    if(formMessage.length > 0)
        p #{ formMessage }